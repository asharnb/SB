{% extends 'checkin.html.twig' %}


{% block sbtheme_scancontainer %}

    <div id="panel-psa" class="panel panel-default">
        <div class="panel-heading seperator">
            <div class="panel-title">Product Scan
            </div>
            <div class="panel-controls">
            </div>
        </div>
        <div class="panel-body">
            <h4>
                <span class="semi-bold">Scan</span> Product Tag</h4>
            {{ form|without('delete',"resequence") }}
        </div>
    </div>


{% endblock %}


{% block sbtheme_product %}
    <div id="panel-pi" class="panel panel-default">
        <div class="panel-heading seperator">
            <div class="panel-title">Product Information
            </div>
            <div class="panel-controls">
              <span id ="{{ form.identifier_nid['#value'] }}">
                <a class="btn btn-xs btn-danger studio-product-drop">Drop Product</a>
               </span>
            </div>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-lg-6">
                    <dl class="dl-horizontal">
                        <dt>Concept: </dt>
                        {% if form.productdetails.concept == 'Unmapped' %}
                            <dd><span class="bold">Unmapped</span></dd>
                        {% else %}
                            <dd class="mb-10"><img
                                        src="/sb/{{ directory }}/images/brands/brand_logo_{{ form.productdetails.concept|lower }}.png"
                                        height="20px"></dd>
                        {% endif %}
                    </dl>

                </div>
                <div class="col-lg-6">
                    <dl class="dl-horizontal">
                        <dt>Color Variant:</dt>
                        <dd><strong><{{ form.productdetails.colorvariant|raw }}/strong></dd>
                    </dl>

                </div>
            </div>
            <div class="row">

                <div class="col-lg-6">
                    <dl class="dl-horizontal">
                        <dt>Identifier:</dt>
                        <dd id="dd-identifier">{{ form.productdetails.identifier }}</dd>
                        <dt>Style No:</dt>
                        <dd id="dd-styleno">{{ form.productdetails.styleno }}</dd>

                        <dt>Season:</dt>
                        <dd>--</dd>
                    </dl>
                </div>
                <div class="col-lg-6">
                    <dl class="dl-horizontal">
                        <dt>Gender:</dt>
                        <dd><strong id="dd-gender">{{ form.productdetails.gender }}</strong></dd>
                        <dt>Color:</dt>
                        <dd id="dd-color">{{ form.productdetails.color }}</dd>
                        <dt>Size:</dt>
                        <dd>--</dd>

                    </dl>
                </div>
                <div class="col-lg-12">
                    <dl class="dl-horizontal">
                        <dt>Description:</dt>
                        <dd id="dd-description">{{ form.productdetails.description }}</dd>

                    </dl>
                </div>

            </div>

        </div>

    </div>
{% endblock %}

{% spaceless %}
    {% block sbimages %}
        {% for image in form.images.images %}
            {% if not image.fid == '' %}

                <div class="bulkviewfiles imagefile" id="warpper-img-{{ image.fid }}">
                    {% if image.tag == '1' %}
                        <div class="ribbon" id="ribboncontainer"><span class="for-tag" id="seq-{{ image.fid }}" name="{{ image.id }}">Tag</span></div>
                    {% else %}
                        <div class="ribbon" id="ribboncontainer"><span class="for-tag" id="seq-{{ image.fid }}" name="{{ image.id }}">{{ image.id }}</span></div>
                    {% endif %}
                    <div class="scancontainer">
                        <img src="{{ image.url }}" class="scanpicture">

                    </div>
                    <div class="file-name">
                        <div id="tag-seq-img-{{ image.fid }}" type="hidden"></div>

                        <div class="row">

                            <div class="col col-sm-8">
                            <span id = {{ image.fid }}>
                                <a class="label label-info"><i class="fa fa-lg fa-fw fa-arrows-alt"></i></a>
                                <a class="label label-warning studio-img-tag" ><i class="fa fa-lg fa-fw fa-tag"></i></a>
                                <a class="label label-success studio-img-fullshot"><i class="fa fa-lg fa-fw fa-copy"></i></a>
                            </span>

                            </div>
                            <div class="col col-sm-4">
                                <div class="onoffswitch2 pull-right">
                                    <span id="{{ image.fid }}">
                                        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox form-checkbox" id="del-img-{{ image.fid }}" value="{{ image.fid }}">
                                            <label class="onoffswitch-label" for="del-img-{{ image.fid }}">
                                                <span class="onoffswitch-inner"></span>
                                                <span class="onoffswitch-switch"></span>
                                            </label>
                                    </span>
                                </div>
                            </div>

                        </div>

                    </div>
                    <div class="studio-img-weight"><input type="hidden" value="{{ image.fid }}"></div>
                </div>
            {% endif %}
        {% endfor %}
    {% endblock sbimages %}
{% endspaceless %}

{% block sidepanel %}
    <div class="sidebard-panel" style="min-height: 100%;">

        <div id="widgettile">
            <div class="widget blue-bg p-lg text-center">
                <div class="m-b-md">
                    <h1 class="m-xs no-of-products">{{ form.productdetails.total_products }}</h1>
                    <h3 class="font-bold no-margins">Products</h3>
                    <small>Unmapped: 0</small>
                </div>
            </div>
        </div>

        <div class="m-t-md">
            <h4>Listener App</h4>
            <div class=" m-t-sm gray-bkground text-center">
											<span class="text-center">
												<div id="appstatus"></div>
											</span></div>
        </div>


    </div>
    <div class="m-t-md">
        <h4>Session</h4>
        <h3 class="text-center"><strong></strong></h3>
        <div class="m-t-sm gray-bkground">
            <div class="row">
                <div class="col-md-6">
                    &nbsp; <span><i class="fa fa-circle text-success"></i> Open</span>
                </div>
                <div class="col-md-6">
                </div>
            </div>

        </div>
    </div>

    <div class="m-t-md">
        <h4>QC Status</h4>
        <div>
            <ul class="list-group">
                <li class="list-group-item ">
                    <span class="label label-danger pull-right">0</span>
                    Rejected
                </li>
            </ul>
        </div>
    </div>

    <div class="m-t-md">
        <h4>Current Product</h4>
        <div>
            <ul class="list-group">
                <li class="list-group-item">
                    <span class="label label-default pull-right">-- </span>
                    Product Status
                </li>
                <li class="list-group-item">
                    <span class="label label-success pull-right"
                          id="product-img-count">{{ form.productdetails.image_count }}</span>
                    Images Shot
                </li>
                <li class="list-group-item">
                    <span class="label label-danger pull-right">0</span>
                    Images Deleted
                </li>

            </ul>
        </div>
    </div>

    <div class="m-t-md">
        <h4>Product Checks</h4>
        <div>
            <ul class="list-group">
                <li class="list-group-item">
                    <span class="label label-warning pull-right">No</span>
                    Is complete?
                </li>
                <li class="list-group-item">
                    <span class="label label-success pull-right">Ok</span>
                    In Sequence
                </li>
                <li class="list-group-item">
                    <span class="label label-warning pull-right">No</span>
                    Has Tag Image?
                </li>
            </ul>
        </div>
    </div>
{% endblock sidepanel %}
