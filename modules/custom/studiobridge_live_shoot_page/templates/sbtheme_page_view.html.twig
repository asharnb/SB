{% extends 'sbtheme_page.html.twig' %}


{% block sbtheme_scancontainer %}
  <div class="col-sm-12 m-t-sm no-padding">
        <div class="col-sm-5">
            <h5 class="no-margins semi-bold">Enter Product Tag</h5>
            {{ form|without('delete',"resequence") }}
        </div>
  </div>



{% endblock %}


{% block sbtheme_product %}

            <div class="col-sm-12 p-sm">
              <h5 class="no-margins semi-bold m-b-sm">Product Information</h5>
                <div class="col-lg-6">
                    <dl class="dl-horizontal">
                        <dt>Concept: </dt>
                        {% if form.productdetails.concept == 'Unmapped' %}
                            <dd id="dd-concept"><span class="bold">Unmapped</span></dd>
                        {% else %}
                            <dd id="dd-concept" class="mb-10"><img
                                        src="/sb/{{ directory }}/images/brands/brand_logo_{{ form.productdetails.concept|lower }}.png"
                                        height="20px"></dd>
                        {% endif %}
                    </dl>

                </div>
                <div class="col-lg-6">
                    <dl class="dl-horizontal">
                        <dt>Color Variant:</dt>
                        <dd><strong>{{ form.productdetails.colorvariant|raw }}</strong></dd>
                    </dl>

                </div>

                    <div class="col-lg-6">
                        <dl class="dl-horizontal">
                            <dt>Identifier:</dt>
                            <dd id="dd-identifier">{{ form.productdetails.identifier }}</dd>
                            <dt>Style No:</dt>
                            <dd id="dd-styleno">{{ form.productdetails.styleno }}</dd>

                            <dt>Season:</dt>
                            <dd>--</dd>
                        </dl>
                    </div>
                    <div class="col-lg-6">
                        <dl class="dl-horizontal">
                            <dt>Gender:</dt>
                            <dd><strong id="dd-gender">{{ form.productdetails.gender }}</strong></dd>
                            <dt>Color:</dt>
                            <dd id="dd-color">{{ form.productdetails.color }}</dd>
                            <dt>Size:</dt>
                            <dd>--</dd>

                        </dl>
                    </div>
                </div>
                <div class="col-lg-12">
                    <dl class="dl-horizontal">
                        <dt>Description:</dt>
                        <dd id="dd-description">{{ form.productdetails.description }}</dd>

                    </dl>
                </div>



{% endblock %}

{% spaceless %}
    {% block sbimages %}
    <div class="col-lg-12">
    <h5 class="no-margins semi-bold">Product Images</h5>
          <span class="pull-right">
                                    {{ form.resequence }}
                                    {{ form.delete }}
    </span>
        {% for image in form.images.images %}
            {% if not image.fid == '' %}

                <div class="bulkviewfiles imagefile" id="warpper-img-{{ image.fid }}">
                    {% if image.tag == '1' %}
                    <div class="ribbon" id="ribboncontainer"><span class="for-tag tag" id="seq-{{ image.fid }}" name="{{ image.id }}">Tag</span></div>
                    {% else %}
                    <div class="ribbon" id="ribboncontainer"><span class="for-tag" id="seq-{{ image.fid }}" name="{{ image.id }}">{{ image.id }}</span></div>
                    {% endif %}
                    <div class="scancontainer">

                        <img src="{{ image.url }}" class="scanpicture"  data-imageid="{{ image.fid }}">


                    <div class="file-name">
                        <div id="tag-seq-img-{{ image.fid }}" type="hidden"></div>

                        <div class="row">

                            <div class="col-sm-12">
                            <span id = {{ image.fid }}>
                                <a class="txt-color-white"><i class="fa fa-lg fa-fw fa-search"></i></a>
                                <a class="txt-color-white studio-img-tag" ><i class="fa fa-lg fa-fw fa-tag"></i></a>
                                <a class="txt-color-white studio-img-fullshot"><i class="fa fa-lg fa-fw fa-copy"></i></a>
                                <a class="txt-color-white"><i class="fa fa-lg fa-fw fa-trash-o"></i></a>
                            </span>

                            </div>
                            <!-- <div class="col col-sm-4">
                                <div class="onoffswitch2 pull-right">
                                    <span id="{{ image.fid }}">
                                        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox form-checkbox" id="del-img-{{ image.fid }}" value="{{ image.fid }}">
                                            <label class="onoffswitch-label" for="del-img-{{ image.fid }}">
                                                <span class="onoffswitch-inner"></span>
                                                <span class="onoffswitch-switch"></span>
                                            </label>
                                    </span>
                                </div>
                            </div> -->

                        </div>

                    </div>
                  </div>
                    <div class="studio-img-weight"><input type="hidden" value="{{ image.fid }}"></div>
                </div>
            {% endif %}
        {% endfor %}
      </div>
    {% endblock sbimages %}
{% endspaceless %}

{% block sidepanel %}

        <div id="widgettile" class="row">
            <div class="widget p-sm m-b-s">
                  <div class="col-sm-4">
                    <h1 class="m-xs no-of-products">{{ form.productdetails.total_products|length >0 ? form.productdetails.total_products : '0' }}</h1>
                  </div>
                  <div class="col-sm-8">
                    <h5 class="semi-bold no-padding no-margins">Products</h5>
                    <h5 class="semi-bold no-padding no-margins">in this session</h5>

                  </div>
            </div>
        </div>


    <div class="m-t-sm">
            <div class="row">
              <dl class="dl-horizontal">
                <dt>Session No: </dt>
                <dd><span class="bold">777</span></dd>
              </dl>
                <div class="col-md-6">
                    <a href="/sbtest/view-session/{{form.session['#value']}}" >&nbsp; {{form.session['#value']}}</a>
                </div>
                <div class="col-md-6">
                  <span><i class="fa fa-circle text-success"></i> Open</span>
                </div>
            </div>

    </div>


    <div class="m-t-sm">
        <h4>Current Product</h4>
        <div>
            <ul class="list-group">
                <li class="list-group-item">
                    <span class="bold text-success pull-right ">New </span>
                    Status
                </li>
                <li class="list-group-item">
                    <span class="bold text-info pull-right"> {{ form.productdetails.image_count }}</span>
                    Shot
                </li>
                <li class="list-group-item">
                    <span class="bold text-danger pull-right">0 </span>
                    Deleted
                </li>

            </ul>
        </div>
    </div>

    <div class="m-t-s">
        <h4>Product Checks</h4>
        <div>
            <ul class="list-group">
                <li class="list-group-item">
                    <span class="bold text-success pull-right">-- </span>
                    Is Complete?
                </li>
                <li class="list-group-item">
                    <span class="bold text-success pull-right"><i class="fa fa-check"></i> </span>
                    In Sequence?
                </li>
                <li class="list-group-item">
                    <span class="bold text-success pull-right">-- </span>
                    Has Tag?
                </li>
            </ul>
        </div>
    </div>
{% endblock sidepanel %}
