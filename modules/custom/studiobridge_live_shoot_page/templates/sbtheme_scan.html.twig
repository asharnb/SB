<article class="col-xs-12 col-md-3 col-lg-3 ">
    <div id="panel-ps" class="panel panel-default">
        <div class="panel-heading seperator">
            <div class="panel-title">Product Scan
            </div>
            <div class="panel-controls">
            </div>
        </div>
        <div class="panel-body">
            <h3>
                <span class="semi-bold">Scan</span> Product Tag</h3>
            <div  class="smart-form" >



                <div class="form-group form-group-default required">
                    <label>SKU/Barcode/EAN</label>
                    {% spaceless %}
                        {%
                        set classes = [
                        'form-control',
                        ]
                        %}
                        {% block input %}
                            <input{{ attributes.addClass(classes) }} />
                        {% endblock %}
                    {% endspaceless %}

                </div>

            </div>
        </div>
    </div>

</article>

