
{#{% for result in results %}#}
    {#<p>{{ dump(result) }}</p>#}
{#{% endfor %}#}

<div class="row">

    <!-- NEW COL START -->
    <article class="col-sm-12 col-md-12 col-lg-12 ">
        <div class="panel panel-transparent">
            <div class="panel-heading">
                <div class="panel-title">View Sessions
                </div>
                <div class="panel-controls">
                    <a class="btn btn-primary btn-cons" href="/sbtest/node/add/sessions"><i class="fa fa-plus mr5"></i>Add Session</a>
                </div>

            </div>

            <div class="panel-body">
                <table id="dt_viewsessions" class="table table-responsive table-striped table-bordered table-hover" width="100%">

                    <thead>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Stage</th>
                    <th>Concept(s)</th>
                    <th>Photographer</th>
                    <th>VM</th>
                    <th>Stylist</th>
                    <th>Type</th>
                    <th>Shoot Date</th>
                    <th>Products Shot</th>

                    <th></th>

                    </thead><tbody>

                    {% for result in results %}
                        {% if result.stage.0.value == 'open'  %}
                            {% set status_class = '<span><i class="fa fa-play-circle text-success"></i> Open</span>' %}
                        {% elseif result.stage.0.value == 'paused'  %}
                            {% set status_class = '<span><i class="fa fa-pause text-warning"></i> Paused</span>' %}
                        {% else %}
                            {% set status_class = '<span><i class="fa fa-stop-circle text-danger"></i> Closed</span>' %}
                        {% endif %}

                        {% if result.shootdate.value|date('Y-m-d') == "now"|date("Y-m-d") %}
                          {% set date_class = 'text-success' %}
                        {% else %}
                          {% set date_class = '' %}
                        {% endif %}
                        <tr>

                            <td>{{ result.id }}</td>
                            <td>TBA</td>
                            <td>{{ status_class|raw }}</td>
                            <td>Shoot</td>
                            <td><img class="brand_logo shortened-20" src="/sbtest/{{ directory }}/images/brands/brand_logo_{{ result.field_concept_name.value|lower }}.png" style="padding-top: 5px;"></td>
                            <td>{{ result.photographer }}</td>
                            <td>{{ result.vm }}</td>
                            <td>{{ result.stylist }}</td>
                            <td>{{ result.type.0.value|title|replace({'_': ' '}) }}</td>
                            <td><span class="{{date_class}}">{{ result.shootdate.value|date('Y-m-d') }}</span></td>
                            <td>0</td>
                            <td><a class="btn btn-xs btn-complete" href="/sbtest/view-session/{{ result.id }}">View</a></td>
                        </tr>

                    {% endfor %}


                    </tbody>
                </table>
            </div>
        </div>

    </article>
    <!-- END COL -->
</div>
