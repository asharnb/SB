
<div class="row">
  <div class="col-sm-12 col-md-8">
    <h3>View <span class="semi-bold">Sessions</span></h3>
  </div>
  <div class="col-sm-12 col-md-4">
    <a class="btn btn-primary btn-cons pull-right" href="/sbtest/node/add/sessions"><i class="fa fa-plus mr5"></i>Add Session</a>
  </div>
</div>


<div class="row">
    <!-- NEW COL START -->
    <article class="col-sm-12 col-md-12 col-lg-12 no-padding">
                <table id="dt_viewsessions" class="table table-responsive  table-striped table-hover" width="100%">

                    <thead>
                      <th>ID</th>
                      <th>Status</th>
                      <th>Stage</th>
                      <th>Concept(s)</th>
                      <th>Contributors</th>
                      <th>Date</th>
                      <th>Mapped</th>
                      <th>Unmapped</th>
                      <th></th>
                    </thead>

                    <tbody>

                    {% for result in results %}
                        {% if result.stage.0.value == 'open'  %}
                            {% set status_class = '<span class="text-success"><i class=""></i> Open</span>' %}
                        {% elseif result.stage.0.value == 'paused'  %}
                            {% set status_class = '<span class="text-warning"><i class=""></i> Paused</span>' %}
                        {% else %}
                            {% set status_class = '<span class="text-danger"><i class=""></i> Closed</span>' %}
                        {% endif %}

                        {% if result.shootdate.0.value|date('Y-m-d') == "now"|date("Y-m-d") %}
                          {% set date_class = 'text-success' %}
                        {% else %}
                          {% set date_class = '' %}
                        {% endif %}



                        <tr>

                            <td>{{ result.id }}</td>
                            <td>{{ status_class|raw }}</td>
                            <td>Shoot</td>
                            <td>
                              {% for concepts in result.concepts %}
                                <img src="/sbtest/{{directory}}/images/brands/brand_logo_{{concepts.concept|lower}}.png" height="15px"><br>
                              {% endfor %}

                            </td>
                            <td>
                                <!-- {{ result.photographer }}
                                {{ result.vm }}
                                {{ result.stylist }} -->
<img src="/sbtest/{{directory}}/images/users/{{ random(['niranjan', 'vikas', 'anahita', 'moosa', 'azhar']) }}.jpg" class="img-circle-table " alt="profile">
<img src="/sbtest/{{directory}}/images/users/{{ random(['disha', 'rebecca']) }}.jpg" class="img-circle-table " alt="profile">
<img src="/sbtest/{{directory}}/images/users/{{ random(['althea', 'rinki', 'cia']) }}.jpg" class="img-circle-table " alt="profile">
                            </td>
                            <td><span class="{{date_class}}">{{ result.shootdate.0.value|date("Y-m-d") }}</span></td>
                            {% set mapcount_class = (result.mapped.0.mappedcount > 0 ? 'text-success': 'text-danger') %}
                            <td class="{{mapcount_class}} semi-bold text-center">{{result.mapped.0.mappedcount}}</td>

                            <td class="text-warning semi-bold text-center">{{result.unmapped.0.unmappedcount}}</td>
                            <td>

                              <a class="btn btn-xs btn-complete" href="/sbtest/view-session/{{ result.id }}">View</a>
                              {% if result.stage.0.value == 'open'  %}
                                <a class="btn btn-xs btn-primary" href="/sbtest/live-shooting-page1">Import</a>
                              {% endif %}
                            </td>
                        </tr>

                    {% endfor %}


                    </tbody>
                </table>

    </article>
    <!-- END COL -->
</div>
