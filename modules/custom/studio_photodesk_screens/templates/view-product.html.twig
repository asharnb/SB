{#
/**
* @file
* Default theme implementation to display the Session details page.
*
* Available variables:
* - product_type: Mapped or unmapped product; based on this in this file we can make conditions for product details.
*
* - images: array of image url & its name
*   -  uri: Image style uri, to display image  -  {{ ITEM.uri }}
*   -  name: Name of the image -  {{ ITEM.name }}
*
* - product: array contains all properties of unmapped/Mapped products
*   -  title: Title/Identifier of unmapped/Mapped product   -  {{ ITEM.title.0.value }}
*   -  field_images: To get count of image, use like -  {{ ITEM.field_images|length }}
*   -  field_state: Product status/stage.  -  {{ ITEM.field_state.0.value }}
*   -  created: Timestamp product created - {{ ITEM.create.0.value|date("m/d/Y") }}
*
*     -----  NOTE : following this values valid for mapped product --------
*
*   -  field_concept_name: Name of concept - {{ ITEM.field_concept_name.0.value }}
*   -  field_style_family: Name of style family - {{ ITEM.field_style_family.0.value }}
*   -  field_sku_id: SKU_ID value - {{ ITEM.field_sku_id.0.value }}
*  todo : check for missing values
*
*
* @ingroup themeable
*/
#}



                        <div class="row">
                          <div class="col-sm-12 col-md-12">
                            <h3 class="no-margins p-b-sm">View Product</span></h3>
                            <h4 class="no-margins">View all information related to this product</h4>
                          </div>
                        </div>
                        <hr class="simple">
                            <div class="col-xs-12">
        <div class="panel panel-default row">

          <div class="col-sm-12 p-sm border-bottom">
            <div class="col-sm-12 no-margins no-padding ">
              <div class="col-sm-8">
                <address>
                  <strong class="text-success">Product is active</strong><br>
                  <small class="text-muted"><em>Last edited at {{product.changed.0.value|date('F jS, Y, g:i a')}}</em></small>
                </address>

              </div>
              <div class="col-sm-4">
                  <h4 class="text-grey text-align-right">--</h4>

              </div>
            </div>

            <div class="col-sm-12 p-t-20">

                <div class="col-sm-3 m-l-n">
                  <h5 class="m-sm">Concept</h5>
                  <h3 class="m-sm">



                    {% if (product.field_concept_name.0.value|lower == 'Unmapped' or product.field_concept_name.0.value|lower == '')  %}
                        Not Available
                    {% else %}
                        <img src="/{{ directory }}/images/brands/brand_logo_{{ product.field_concept_name.0.value|lower }}.png" height="20px">
                    {% endif %}
                  </h3>
                </div>

                <div class="col-sm-3">
                  <h5 class="m-sm">Identifier</h5>
                  <h3 class="m-sm">{{ product.title.0.value }}</h3>
                </div>

                <div class="col-sm-3">
                  <h5 class="m-sm">Color Variant</h5>
                  <h3 class="m-sm">{{ product.field_color_variant.0.value }}</h3>
                </div>
                <div class="col-sm-3">
                  <h5 class="m-sm">Style family</h5>
                  <h3 class="m-sm">{{ product.field_style_family.0.value }}</h3>
                </div>



                </div>

                <div class="col-sm-12 p-t-10">



                <div class="col-sm-3 m-l-n">
                  <h5 class="m-sm">Color</h5>
                  <h3 class="m-sm">{{ product.field_color_name.0.value }}</h3>
                </div>

                <div class="col-sm-3">
                  <h5 class="m-sm">Gender</h5>
                  <h3 class="m-sm">{{ product.field_gender.0.value }}</h3>
                </div>

            </div>



              </div>


        <hr class="simple">

                          <div class="col-sm-12 p-sm">



                            <div class="row">
                              <div class="col-sm-12 ">
                                  <h5 class="no-margins semi-bold">Product Images</h5>
                              </div>



                            </div>

                                    <div  id="imagecontainer-wrapper">
                                        <div id="imagecontainer" name="imagecontainer" class="ui-sortable">


                                          {% for image in images %}

                                              {% if not image.fid == '' %}

                                                  <div class="bulkviewfiles imagefile" id="warpper-img-{{ image.fid }}">
                                                      {% if image.tag == '1' %}
                                                      <div class="ribbon" id="ribboncontainer"><span class="for-tag tag" id="seq-{{ image.fid }}" name="{{ image.id }}"><i class="fa fa-lg fa-barcode txt-color-white"></i></span></div>
                                                      {% else %}
                                                      <div class="ribbon" id="ribboncontainer"><span class="for-tag" id="seq-{{ image.fid }}" name="{{ image.id }}">{{ loop.index }}</span></div>
                                                      {% endif %}

                                                      <div class="scancontainer">
                                                        <div class="hovereffect">
                                                          <img src="{{ image.uri }}" class="scanpicture"  data-imageid="{{ image.fid }}">

                                                          <div class="overlay">
                                                              <input type="checkbox" class="form-checkbox" id="del-img-{{ image.fid }}" hidden value="{{image.fid}}">
                                                             <a class="info select-delete" data-id="{{ image.fid }}" data-click="no">Select image</a>
                                                          </div>
                                                      </div>

                                                      <div class="file-name">
                                                          <div id="tag-seq-img-{{ image.fid }}" type="hidden"></div>

                                                          <div class="row">

                                                              <div class="col-sm-12">
                                                              <span  id = {{ image.fid }}>
                                                                  <a target="_blank" href="/file/{{ image.fid }}" class="col-sm-4 text-info"><i class="fa fa-lg fa-fw fa-search"></i></a>


                                                              </span>

                                                              </div>

                                                          </div>

                                                      </div>
                                                    </div>
                                                      <div class="studio-img-weight"><input type="hidden" value="{{ image.fid }}"></div>
                                                  </div>
                                              {% endif %}
                                          {% endfor %}

                                        </div>
                                    </div>
          </div>




          </div>
          </div>
            <!-- right panel -->
            <div class="col-xs-3">

                {% block sidepanel %}
                {% endblock sidepanel %}

            </div>
